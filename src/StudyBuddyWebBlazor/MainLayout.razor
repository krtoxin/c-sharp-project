@inherits LayoutComponentBase

<div class="app-container">
    <div class="sidebar">
        <div class="logo">📘 StudyBuddy</div>
        <nav>
            <NavLink href="/dashboard" class="nav-link" activeClass="active">🏠 Dashboard</NavLink>
            <NavLink href="/subjects" class="nav-link" activeClass="active">📚 Subjects</NavLink>
            <NavLink href="/tasks" class="nav-link" activeClass="active">✅ Tasks</NavLink>
            <NavLink href="/chat" class="nav-link" activeClass="active">💬 Chat</NavLink>
            <NavLink href="/settings" class="nav-link" activeClass="active">⚙️ Settings</NavLink>
        </nav>
    </div>

    <div class="main-content">
        @Body
    </div>
</div>

<style>
    .app-container {
        display: flex;
        height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6fa;
    }

    .sidebar {
        width: 220px;
        background-color: #23272a;
        color: white;
        display: flex;
        flex-direction: column;
        padding: 1rem;
    }

    .logo {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    nav {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .nav-link {
        color: #b9bbbe;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .nav-link:hover {
        background-color: #2c2f33;
    }

    .active {
        background-color: #7289da;
        color: white;
    }

    .main-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
    }
</style>
