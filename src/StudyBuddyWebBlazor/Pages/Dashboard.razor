@page "/dashboard"

<div class="dashboard-wrapper">
    <section class="dashboard-header">
        <h1>Welcome back 👋</h1>
        <p>Manage your subjects, tasks, and productivity like a pro.</p>
    </section>

    <section class="dashboard-grid">
        <div class="dashboard-card">
            <i class="bi bi-journal-bookmark"></i>
            <h3>Subjects</h3>
            <p>12 Active Subjects</p>
        </div>
        <div class="dashboard-card">
            <i class="bi bi-check2-circle"></i>
            <h3>Tasks</h3>
            <p>24 Pending Tasks</p>
        </div>
        <div class="dashboard-card">
            <i class="bi bi-graph-up-arrow"></i>
            <h3>Progress</h3>
            <p>75% Complete</p>
        </div>
        <div class="dashboard-card">
            <i class="bi bi-bell"></i>
            <h3>Notifications</h3>
            <p>3 New Messages</p>
        </div>
    </section>
</div>