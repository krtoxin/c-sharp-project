@model IEnumerable<StudyBuddy.Core.Entities.Subject>

<h1>Управління предметами</h1>
<a href="/Subjects/Create" class="btn btn-primary">Додати предмет</a>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Іконка</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><img src="@item.Icon" width="40"></td>
                <td>
                    <a href="/Subjects/Edit/@item.Id" class="btn btn-warning">Редагувати</a>
                    <form method="post" action="/Subjects/Delete/@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
